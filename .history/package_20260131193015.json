{
  "name": "atmos",
  "version": "1.0.0",
  "description": "Real-time Team Wellness Monitor - MERN Stack Application",
  "main": "server/src/index.js",
  "scripts": {
    "setup": "cd server && npm install && cd ../client && npm install",
